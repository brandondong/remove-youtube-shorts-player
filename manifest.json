{
    "name": "Remove Youtube Shorts UI",
    "version": "1",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "all_frames": true,
            "js": [
                "youtube.js"
            ]
        }
    ],
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "manifest_version": 3
}